package Assignment4;

import java.util.Scanner;

public class Assignment4_09 {
	public static void main(String[] args) {
		// 읽은 개수만큼 *표시 (5개단위로 줄바꿈)(다른 방법)
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("몇개의 *을 표시할까요? : ");
		int s = scanner.nextInt();
		
		if(s > 0) {
			for(int i=0; i<s/5; i++) {
				System.out.println("*****");
				int rest = s%5;
				if(rest > 0) {
					for(i=0; i<rest; i++) {
						System.out.print("*");
			}

				}
			}
		}
	}
}
