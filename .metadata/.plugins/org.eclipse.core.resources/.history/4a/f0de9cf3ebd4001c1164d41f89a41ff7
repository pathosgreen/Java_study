package test;

public class Test05 {
	public static void main(String[] args) {
		// 조합
		
		String[] name = {"aaa","bbb","ccc","ddd","eee"};
		int[] point = {98,70,45,60,83};
		int[] rank = {5,4,3,2,1};
		int temp=0;
		for(int i=0;i<point.length; i++) {
			for(int j=i+1;j<point.length; j++ ) {
				if(point[i]>point[j]) {
					if(rank[i]>rank[j]) {
						temp=rank[i]; rank[i]=rank[j]; rank[j]=temp;
					}
				}else if(point[i]<point[j]) {
					if(rank[i]<rank[j]) {
						temp=rank[i]; rank[i]=rank[j]; rank[j]=temp;
					}
				}
			}
		}
		System.out.println("번호\t이름\t점수\t등수");
		for(int i=0;i<rank.length; i++) {
			System.out.println(i+1 +".\t"+name[i]+"\t"+ point[i]+"점\t"+rank[i]+"등");
		}
	}
}
